        <li><b><pre><a href="#get-items-id">GET</a>, <a href="#patch-items-id">PATCH</a>, <a href="#delete-items-id">DELETE</a> /items/:id</b></li>
        <li><b><pre><a href="#get-merchants-items">GET</a> /merchants/:merchant_id/items</b></li>
        <li><b><pre><a href="#get-merchants-revenue">GET</a> /merchants/:merchant_id/revenue</b></li>
        <li><b><pre><a href="#get-revenue">GET</a> /revenue</b></li>
